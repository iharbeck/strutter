<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>
    <form-beans/>
    <global-forwards/>
   	<action-mappings/>

	<controller contentType="text/html;charset=UTF-8" locale="true" nocache="true">
 	  <set-property  property="processorClass"
		value="org.springframework.web.struts.AutowiringRequestProcessor"/>
	
	</controller>

	<message-resources null="false" parameter="ApplicationResources"/>


	<plug-in className="struts.easy.ActionPlugin">
    	<!-- 
    	<set-property property="packageroot"  value="action"/>  
    	<set-property property="aliasaction"  value="Action"/>
    	<set-property property="aliasform"    value="ActionForm"/>
    	<set-property property="pathformat"   value="Frm{PATH}"/>
    	<set-property property="pathlower"    value="0"/>
    	-->
   	</plug-in> 
</struts-config>
