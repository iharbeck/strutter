<!--
 Optional security Filter 
 Implements SSO Solution. see: login.do Action
							   AuthSimpleImpl.java	

 Alternative configure container managed security
-->
  <!-- Client -->
  <filter>
    <filter-name>Security</filter-name>
    <filter-class>struts.optional.filter.SecurityFilter</filter-class>
  </filter>
  
  <filter-mapping>
    <filter-name>Security</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
  
  <!--  Server -->
  <context-param>
     <param-name>AuthImpl</param-name>
     <param-value>sample.object.AuthSimpleImpl</param-value>
  </context-param>
 

<!--
 Optional Interceptor Filter 
-->

  <filter>
    <filter-name>Interceptor</filter-name>
    <filter-class>struts.optional.filter.InterceptorFilter</filter-class>
  </filter>
  
  <filter-mapping>
    <filter-name>Interceptor</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
   
 
 
   
